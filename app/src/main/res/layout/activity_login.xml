<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity"
        android:theme="@style/Theme.Design.NoActionBar"
        android:background="@color/paygo_bgcolor">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/passwordText"
            android:hint="@string/login_label"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorHighlight="#FFFFFF" android:autofillHints="" tools:targetApi="o"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" tools:text="adrianolaselva"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginText" android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/password_label"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:importantForAutofill="no" tools:text="adriano25"/>

    <Button
            android:text="@string/access_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="#FF9900"
            android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/keepConnectedCheckBox"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo_splash"
            android:id="@+id/imageView2" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/loginText"/>
    <CheckBox
            android:text="Se manter conectado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/keepConnectedCheckBox"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"/>

</android.support.constraint.ConstraintLayout>